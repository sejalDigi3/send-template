  </head>
  <body>
    
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <img src="/static/assets/images/download.png">
                </div>
                <h4>Forgot your password</h4>
                <p>Enter your Email address and we'll send you a link to reset password</p>


<!-- Add this code to display login errors -->
<% if (typeof loginErrors !== 'undefined' && loginErrors.length > 0) { %>
  <div class="alert alert-danger" id="errorShowing">
    <ul>
      <% loginErrors.forEach(function(error) { %>
        <li><%= error %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<!-- Your login form goes here -->


                <!-- <h6 class="font-weight-light">Sign in to continue.</h6> -->
                <form  action="/reset-password" method="post" class="pt-3">
                 
                  <input type="hidden" name="resetToken" value="<%=  resetToken %> ">


                  
                    <div class="form-group">
                        <input type="password" class="form-control form-control-lg" name="newPassword" id="password" placeholder="Reset your password">
                        <i class="toggle-password fa fa-eye" data-target="password" style="position: absolute; right: 5rem; bottom: 14.4rem; color: #c1c1c1;"></i>
                      </div>


                 <div class="mt-3">
                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="#">update password</button>
                  </div>
            
                  
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/static/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
