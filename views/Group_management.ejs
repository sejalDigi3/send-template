<%- include('partials/head.ejs') %>

    <body>

        <div class="container-scroller">
            <%- include('partials/navbar.ejs') %>
                <div class="container-fluid page-body-wrapper">
                    <%- include('partials/sidebar.ejs') %>
                        <div class="main-panel">
                            <div class="content-wrapper">
                                <div class="page-header">
                                    <h3 class="page-title">
                                        <span class="page-title-icon bg-gradient-primary text-white me-2">
                                            <i class="mdi mdi-home"></i>
                                            <!-- <img src="/static/assets/images/home-gradient.png" alt="" style="width: 35px;"> -->
                                        </span> Group management
                                    </h3>
                                </div>

                                <!-- add custom code here -->
                                <div class="row">
                                    <div class="col-lg-12 grid-margin stretch-card">
                                        <div class="card">
                                            <h2 class="text-center" style="padding-top: 30px">Add Group</h2>
                                            <div class="card-body">


                                                <form action="/GroupNameSaveIntoDb" method="post">
                                                    <div class="catagoryCont" style="display: flex;">
                                                        <input type="text" style="width: 30%; border-radius: 5px;"
                                                            name="GroupName" class="form-control p-2"
                                                            id="phoneNumOfTemp" placeholder="Add Group" required>
                                                        <button style="margin-left: 1rem;" class="button-12">Add
                                                            Group</button>

                                                        <div class="backBtn" style="width: 50%;">
                                                            <a class="button-12" href="/contacts"
                                                                style="text-decoration: none; float: right;"><i
                                                                    class="fa fa-arrow-left" aria-hidden="true"></i>
                                                            </a>
                                                        </div>
                                                    </div>

                                                </form>
                                                <style>
                                                    .backBtn a:hover {
                                                        color: white;
                                                    }
                                                </style>

                                                <!-- views/Group_management.ejs -->
                                                <div class="row">
                                                    <div class="col-lg-12 grid-margin stretch-card">
                                                        <div class="card">
                                                            <div class="card-body">
                                                                <table class="table">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Groups</th>

                                                                            <th>Action</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <% Groups.forEach(function(Group) { %>
                                                                            <tr>
                                                                                <td>
                                                                                    <%= Group.GroupName %>
                                                                                </td>
                                                                                <td
                                                                                    style="width: 10px;font-size: medium;">
                                                                                    <a href="/Group_management/edit/<%= Group._id %>"
                                                                                        style="color: #323232;"><i
                                                                                            class="fas fa-edit"></i></a>
                                                                                </td>
                                                                                <td
                                                                                    style="width: 10px;font-size: medium;">
                                                                                    <!-- Add a confirmation dialog -->
                                                                                    <a href="#" style="color: #323232;"
                                                                                        onclick="confirmDelete('<%= Group._id %>')">
                                                                                        <i class="fa fa-trash"
                                                                                            aria-hidden="true"></i>
                                                                                    </a>
                                                                                </td>
                                                                            </tr>
                                                                            <% }); %>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- add custom code here -->
                            </div>
                            <%- include('partials/footer.ejs') %>
                        </div>
                </div>
        </div>
        <script>
            function confirmDelete(GroupId) {
                var confirmation = confirm("Are you sure you want to delete this Group?");
                if (confirmation) {
                    window.location.href = "/Group_management/delete/" + GroupId;
                } else {
                    // User clicked cancel, do nothing
                }
            }
        </script>
        <script>
            window.history.pushState(null, null, window.location.href);
            window.onpopstate = function () {
                window.history.pushState(null, null, window.location.href);
            };
        </script>

    </body>

    <%- include('partials/scripts.ejs') %>

        </html>
