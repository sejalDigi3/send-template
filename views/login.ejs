                  <div class="form-group">
                    <input type="password" class="form-control form-control-lg" name="userpassword" id="exampleInputPassword1" placeholder="Password">
                    <i class="toggle-password fa fa-eye-slash" id="password-toggle" style="position: absolute;
                    right: 29rem;
                    bottom: 27.1rem;
                    color: gray;"></i>
                  </div>
                  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function() {
    $('#password-toggle').click(function() {
      var passwordInput = $('#exampleInputPassword1');
      var icon = $(this);

      if (passwordInput.attr('type') === 'password') {
        passwordInput.attr('type', 'text');
        icon.removeClass('fa-eye-slash').addClass('fa-eye');
      } else {
        passwordInput.attr('type', 'password');
        icon.removeClass('fa-eye').addClass('fa-eye-slash');
      }
    });
  });
</script>




