<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <img src="/static/assets/images/download.png">
                </div>
                <h4>New here?</h4>

                <% if (typeof validationErrors !== 'undefined' && validationErrors.length > 0) { %>
                  <div class="alert alert-danger" id="errorShowing">
                    <ul>
                      <li><%= validationErrors[0] %></li>
                    </ul>
                  </div>
                <% } %>


                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                <form action="/Register" method="post" class="pt-3">
                  <div class="form-group">
                    <input type="text" class="form-control form-control-lg" id="exampleInputUsername1" name="fname" value="<%= typeof fname !== 'undefined' ? fname : '' %>" placeholder="First Name">
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control form-control-lg" id="exampleInputUsername1" name="lname" value="<%= typeof lname !== 'undefined' ? lname : '' %>" placeholder="Last Name">
                  </div>
                  <div class="form-group">
                    <input type="number" class="form-control form-control-lg" id="exampleInputUsername1" name="phoneNum" value="<%= typeof phoneNum !== 'undefined' ? phoneNum : '' %>" placeholder="Phone Number">
                  </div>

                  <div class="form-group">
                    <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" name="userEmail" value="<%= typeof userEmail !== 'undefined' ? userEmail : '' %>" placeholder="Email">
                  </div>
                  
                  <!-- <div class="form-group">
                    <input type="password" class="form-control form-control-lg" name="userpassword" id="exampleInputPassword1" placeholder="Password">
                    <i class="toggle-password fa fa-eye"style="position: absolute;
                    right: 5rem;
                    bottom: 14.4rem; color: #c1c1c1;"></i>
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control form-control-lg" name="cpassword" id="exampleInputPassword1" placeholder="Confirm Password">
                      <i class="toggle-password fa fa-eye" style="position: absolute;
                      right: 5rem;
                      bottom: 10.7rem;color: #c1c1c1;"></i>
                  </div> -->
                  <div class="form-group">
                    <input type="password" class="form-control form-control-lg" name="userpassword" id="password" placeholder="Password">
                    <i class="toggle-password fa fa-eye" data-target="password" style="position: absolute; right: 5rem; bottom: 14.4rem; color: #c1c1c1;"></i>
                  </div>
                  <!-- <div class="form-group">
                    <input type="password" class="form-control form-control-lg" name="cpassword" id="cpassword" placeholder="Confirm Password">
                    <i class="toggle-password fa fa-eye" data-target="cpassword" style="position: absolute; right: 5rem; bottom: 10.7rem; color: #c1c1c1;"></i>
                  </div> -->
                  


              
                  <div class="mt-3">
                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">SIGN UP</button>
                  </div>
                  <div class="text-center mt-4 font-weight-light"> Already have an account? <a href="/" class="text-primary">Login</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/static/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->



    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
      $(document).ready(function() {
        $('.toggle-password').click(function() {
          var targetId = $(this).data('target');
          var input = $('#' + targetId);
          $(this).toggleClass('fa-eye fa-eye-slash');
          if (input.attr('type') === 'password') {
            input.attr('type', 'text');
          } else {
            input.attr('type', 'password');
          }
        });
      });
    </script>
    

    <script src="../../assets/js/off-canvas.js"></script>
    <script src="../../assets/js/hoverable-collapse.js"></script>
    <script src="../../assets/js/misc.js"></script>
    <!-- endinject -->


    
    


  
